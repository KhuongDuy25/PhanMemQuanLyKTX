        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QL_KTX_SV"
        mc:Ignorable="d"
        Title="sinhvien" Height="535" Width="672">
    <Grid Margin="0,0,2,-159">
        <local:CommonControl></local:CommonControl>
        <Grid RenderTransformOrigin="0.581,0.624" Margin="7,-58,4,0" Height="586" VerticalAlignment="Top">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="0*"/>
            </Grid.RowDefinitions>



            <Label Content="Tìm kiếm :" HorizontalAlignment="Left" Margin="352,263,0,0" VerticalAlignment="Top" Height="26" Width="64" RenderTransformOrigin="0.622,-2.891"/>
            <TextBox x:Name="tb_search"  HorizontalAlignment="Left" Margin="354,292,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="202" Height="22" TextChanged="tb_search_TextChanged" RenderTransformOrigin="0.5,0.5">
                <TextBox.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="0.036"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </TextBox.RenderTransform>
            </TextBox>
            <Button x:Name="search"  Content="Tìm Kiếm" HorizontalAlignment="Left" Margin="570,280,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.49,-0.218" Height="34" Width="65" Click="search_Click" />
            <DataGrid Grid.Row="0" x:Name="dataGrid1" AutoGenerateColumns="True"  Margin="11,90,14,363" SelectionChanged="dataGrid1_SelectionChanged">
                <DataGrid.Effect>
                    <DropShadowEffect/>
                </DataGrid.Effect>
            </DataGrid>
            <ComboBox x:Name="cb_tp" HorizontalAlignment="Left" Margin="433,354,0,0" VerticalAlignment="Top" Width="120" Height="22"/>
            <Button x:Name="bt_tkp"  Content="Tìm Kiếm" HorizontalAlignment="Left" Margin="569,344,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.49,-0.218" Height="33" Width="65" Click="bt_tkp_Click" />
            <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="229" Margin="345,260,0,0" VerticalAlignment="Top" Width="301"/>

        </Grid>


        <Border BorderBrush="#FF9DA3A2" BorderThickness="1" CornerRadius="5" Margin="18,181,327,0" Height="320" VerticalAlignment="Top">
            <Border.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="1"/>
                    <GradientStop Color="White" Offset="0.061"/>
                    <GradientStop Color="#FEB0B0B0" Offset="0.996"/>
                    <GradientStop Color="#FEF8F8F8" Offset="1"/>
                    <GradientStop Color="#FEF9F9F9" Offset="0"/>
                    <GradientStop Color="#FEFFFFFF" Offset="0"/>
                </LinearGradientBrush>
            </Border.Background>
            <Border.OpacityMask>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black"/>
                    <GradientStop Color="#FFC89090" Offset="1"/>
                </LinearGradientBrush>
            </Border.OpacityMask>
            <Grid Margin="-29,14,8,4">
